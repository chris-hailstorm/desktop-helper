{
  "name": "ICEIZNICE Desktop Helper",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Enable ICEIZNICE to update Google Calendar from KonaOS event calendar.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
 "host_permissions": [
    "https://*.konaos.com/*"
  ],
  "permissions": [
    "tabs",
    "debugger"
    ],
    "background": {
      "service_worker": "background.js"
    },
  "action": {
    "default_popup": "popup.html"
  }
}
